<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:text="Bienvenidos"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/logocolor"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/textView"
        android:layout_marginBottom="20dp"
        android:background="@drawable/estampamos_color" />

    <TextView
        android:id="@+id/bienvenidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logocolor"
        android:layout_marginBottom="100dp"
        android:gravity="center_horizontal"
        android:text="Somos una tienda dedicada a la venta de camisetas estampadas de todo tipo"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/home1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/bienvenidos"
        android:background="@drawable/wddtshirt3" />

</RelativeLayout>