<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_configuracion">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_foto_perfil_foreground"
        app:layout_constraintBottom_toTopOf="@id/nom_usuario"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/nom_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="NOMBRE USUARIO"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/editar_perfil"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/editar_perfil"
        android:layout_width="300sp"
        android:layout_height="60sp"
        android:text="EDITAR PERFIL"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/info_usuario"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/botton_redondo"/>

    <Button
        android:id="@+id/info_usuario"
        android:layout_width="300sp"
        android:layout_height="60sp"
        android:text="informacion usuario"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/historial"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/botton_redondo"/>

    <Button
        android:id="@+id/historial"
        android:layout_width="300sp"
        android:layout_height="60sp"
        android:layout_marginBottom="20dp"
        android:text="historial de compras"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/eliminar_cuenta"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/botton_redondo"/>

    <Button
        android:id="@+id/eliminar_cuenta"
        android:layout_width="300sp"
        android:layout_height="60sp"
        android:layout_marginBottom="136dp"
        android:text="ELIMINAR CUENTA"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/botton_redondo"/>

</androidx.constraintlayout.widget.ConstraintLayout>